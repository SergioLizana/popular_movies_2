<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_review_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="riviasoftware.popular_movies.ResumeMovieActivity">

    <TextView
        android:id="@+id/emptyListTrailerAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="NO TRAILERS FOUND"
        android:gravity="center"
        android:textSize="@dimen/textAlertEmptyList"
        android:textStyle="bold"
        android:text="@string/empty_list_trailer_alert"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:id="@+id/recyclerviewtrailers">

    </android.support.v7.widget.RecyclerView>


</FrameLayout>